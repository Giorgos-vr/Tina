#:kivy 2.0
WindowManager:
    IntroWindow:
    MenuWindow:
    ShapeGame:
    ItemGame:
    NumberGame:
    LetterGame:


<IntroWindow>:
    name: "Intro"
    BoxLayout:
        orientation: "vertical"
        size: root.width, root.height

        ScrollView:
            Label:
                id:"intro"
                text_size: self.width, None
                font_size: 24
                text: root.label_text
                halign: 'center'
                valign: 'center'
                pos_hint: "center"

        Button:
            text: "Main Menu"
            font_size: 22
            size_hint: 1.0, 0.2
            on_release:
                app.root.current = "menu"
                root.manager.transition.direction = "left"
                
        
<MenuWindow>:
    name: "menu"
    id: MenuWindow
    BoxLayout:
        orientation: "vertical"
        size: root.width, root.height

        Image:
            id:"menu"
            screen: MenuWindow
            source: root.tina
            before_source: self.source
            
        BoxLayout:
            size_hint: 1.0, 0.2
            Button:
                text: "Shapes&colours"
                font_size: 22
                on_release:
                    app.root.current = "shapes"
                    root.manager.transition.direction = "left"
            Button:
                text: "Items&animals"
                font_size: 22
                on_release:
                    app.root.current = "items"
                    root.manager.transition.direction = "left"

            Button:
                text: "Numbers"
                font_size: 22
                on_release:
                    app.root.current = "numbers"
                    root.manager.transition.direction = "left"

            Button:
                text: "Letters"
                font_size: 22
                on_release:
                    app.root.current = "letters"
                    root.manager.transition.direction = "left"
                
        Button:
            text: "Exit"
            font_size: 22
            size_hint: 1.0, 0.2
            on_release: app.root.current = exit()

<ShapeGame>:
    name: "shapes"
    id: ShapeGame
    BoxLayout:
        orientation: "vertical"
        size: root.width, root.height
        Image:
            id:"shapes"
            screen: ShapeGame
            source: root.rand_shape
            before_source: self.source

        BoxLayout:
            size_hint: 1.0, 0.2
            size: root.width, root.height
            Button:
                text: "Menu"
                font_size: 22
                on_release:
                    app.root.current = "menu"
                    root.manager.transition.direction = "right"
                    
            Button:
                text: "Exit"
                font_size: 22
                on_release:
                    app.root.current = exit()


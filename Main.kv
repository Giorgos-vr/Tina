#:kivy 2.0
WindowManager:
    IntroWindow:
    MenuWindow:
    ShapeGame:
    ColourGame:
    LetterGame:
    NumberGame:


<IntroWindow>:
    name: "Intro"
    BoxLayout:
        orientation: "vertical"
        size: root.width, root.height

        Label:
            id:"intro"
            text: "Intro"
            font_size: 34
        
        Button:
            text: "Main Menu"
            font_size: 22
            size_hint: 1.0, 0.2
            on_release:
                app.root.current = "menu"
                root.manager.transition.direction = "left"
                
        
<MenuWindow>:
    name: "menu"
    BoxLayout:
        orientation: "vertical"
        size: root.width, root.height

        Label:
            id:"menu"
            text: "Menu Screen"
            font_size: 34
            
        BoxLayout:
            size_hint: 1.0, 0.2
            Button:
                text: "Shape Game"
                font_size: 22
                on_release:
                    app.root.current = "shapes"
                    root.manager.transition.direction = "left"
            Button:
                text: "Colour Game"
                font_size: 22
                on_release:
                    app.root.current = "colours"
                    root.manager.transition.direction = "left"

            Button:
                text: "Letter Game"
                font_size: 22
                on_release:
                    app.root.current = "letters"
                    root.manager.transition.direction = "left"

            Button:
                text: "Number Game"
                font_size: 22
                on_release:
                    app.root.current = "numbers"
                    root.manager.transition.direction = "left"
                
        Button:
            text: "Exit"
            font_size: 22
            size_hint: 1.0, 0.2
            on_release: app.root.current = exit()

<ShapeGame>:
    name: "shapes"
    id: ShapeGame
    BoxLayout:
        orientation: "vertical"
        size: root.width, root.height
        Image:
            id:"shapes"
            screen: ShapeGame
            source: self.screen.rand_shape
            before_source: self.source

        BoxLayout:
            size_hint: 1.0, 0.2
            size: root.width, root.height
            Button:
                text: "Menu"
                font_size: 22
                on_release:
                    app.root.current = "menu"
                    root.manager.transition.direction = "right"
            Button:
                text: "Exit"
                font_size: 22
                on_release:
                    app.root.current = exit()

